<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#000000">

    <!-- Lion circular icon -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_lion_circle"
        android:layout_marginBottom="24dp" />

    <!-- Main card -->
    <LinearLayout
        android:id="@+id/cardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_white"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Lion!"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your premium plans here."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/divider_horizontal_soft" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No active plan yet."
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Primary button -->
    <Button
        android:id="@+id/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@drawable/btn_primary_bg" />

    <!-- Secondary button -->
    <Button
        android:id="@+id/btnSecondary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="Maybe later"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_secondary_bg" />

</LinearLayout>